    <Frame name="LootLCNeedFrameWindow" hidden="false" toplevel="true"
           parent="UIParent" movable="true" enableMouse="true">
        <Size>
            <AbsDimension x="200" y="40"/>
        </Size>
        <Anchors>
            <Anchor point="CENTER">
                <Offset>
                    <AbsDimension x="0" y="100"/>
                </Offset>
            </Anchor>
        </Anchors>
        <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background"
                  tile="true">
            <EdgeSize>
                <AbsValue val="16"/>
            </EdgeSize>
            <TileSize>
                <AbsValue val="16"/>
            </TileSize>
            <BackgroundInsets>
                <AbsInset left="4" right="4" top="4" bottom="4"/>
            </BackgroundInsets>
        </Backdrop>
        <Frames>

        </Frames>

        <Scripts>
            <OnLoad>
                    this:RegisterForDrag("LeftButton");
                    this:SetMovable(1);
                    this:SetUserPlaced(true);
            </OnLoad>
            <OnDragStart>
                    this:StartMoving();
                    this.isMoving = true;
            </OnDragStart>
            <OnDragStop>
                    this:StopMovingOrSizing();
                    this.isMoving = false;
            </OnDragStop>
        </Scripts>
